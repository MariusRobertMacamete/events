<AddProject>:
    FloatLayout:
        pos_hint:{'x':0,'y':0}
        size_hint:1,1
        canvas.before:
            Color:
                rgba:1,1,1,1
            Rectangle:
                pos:self.pos
                size:self.size

        Label:
            id:lbl_create_event
            color:hex('#5B5B5B')
            text:'Create Event'
            pos_hint:{'x':0, 'y':.8}
            font_size:'30sp'

        Label:
            id:lbl_add_avatar
            color:hex('#A1A1A1')
            text: 'Please choose a new avatar, name and description'
            pos_hint:{'x':0, 'y':.7}
            font_size:'20sp'

        Button:
            id:btn_add_avatar
            pos_hint:{'x':.45,'y':.45}
            size_hint:.1,.2
            background_color:1,1,1,0
            Image:
                source:'images/add.png'

        Label:
            id:lbl_event_name
            text:'Event Name'
            pos_hint:{'x':.205, 'y':.45}
            color:0,0,0,0
            text_size:self.size

        TextInput:
            id:txt_event_name
            pos_hint:{'x':.2, 'y':.4}
            size_hint:.6,.05
            hint_text:'Event Name'
            on_focus:
                lbl_event_name.color=0,0,0,.5
                btn_create_event.color=0,0,0,.7
            on_text_validate:
                txt_description.focus=True

        Label:
            id:lbl_description
            text:'Event Description'
            pos_hint:{'x':.205, 'y':.35}
            color:0,0,0,0
            text_size:self.size

        TextInput:
            id:txt_description
            pos_hint:{'x':.2, 'y':.3}
            size_hint:.6,.05
            hint_text:'Event Description'
            on_focus:
                lbl_description.color=0,0,0,.5
            on_text_validate:
                btn_create_event.focus=True

        FloatLayout:
            pos_hint:{'x':.53, 'y':.17}
            size_hint:.3,.05

            BoxLayout:
                size:self.size
                size_hint_x: .9
                pos_hint:{'x':0, 'y':0}
                spacing:10

                Button:
                    id:btn_cancel_event
                    text:'Cancel'
                    color:0,0,0,0.7
                    background_color:0,0,0,0
                    on_release:
                        root.restat_gui()
                    Image:
                        source:'images/buttonImage.png'

                Button:
                    id:btn_create_event
                    text:'Create Event'
                    color:0,0,0,0.5
                    background_color:1,1,1,0
                    on_release:
                        root.ins_event_to_db()
                        root.check_event_name()
                        if error_event.text=='correct':root.manager.current='event_page_name'
                        else: root.restat_gui()
                    Image:
                        source:'images/buttonImage.png'

        Label:
            id:error_event
            pos_hint:{'x':.05, 'y':.35}
            color:0,0,0,0
            text_size:self.size
            text:''
